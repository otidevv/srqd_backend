# ============================================================================
# BACKEND PRODUCCIÓN - Sistema SRQD UNAMAD
# ============================================================================
# IMPORTANTE: Configurar estas variables en el servidor de producción
# NO commitear este archivo con valores reales a Git
# ============================================================================

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL="postgresql://usuario:password@localhost:5432/srqd_production?schema=public"
# Ejemplo con servidor remoto:
# DATABASE_URL="postgresql://usuario:password@db.ejemplo.com:5432/srqd_production?schema=public"

# ============================================================================
# JWT - SEGURIDAD
# ============================================================================
# IMPORTANTE: Generar un secreto fuerte y único para producción
# Usar: openssl rand -base64 64
JWT_SECRET="CAMBIAR_POR_SECRET_FUERTE_EN_PRODUCCION_MIN_64_CARACTERES"
JWT_EXPIRATION="8h"

# ============================================================================
# SERVER
# ============================================================================
PORT=3000
NODE_ENV="production"
FRONTEND_URL="https://denuncia.unamad.edu.pe"

# ============================================================================
# CORS
# ============================================================================
# Puede ser múltiples orígenes separados por comas
CORS_ORIGIN="https://denuncia.unamad.edu.pe"

# ============================================================================
# UPLOADS
# ============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_DEST="./uploads"

# ============================================================================
# EMAIL (SMTP)
# ============================================================================
# Configuración del servidor de correo de UNAMAD
MAIL_HOST="smtp.unamad.edu.pe"
MAIL_PORT=587
MAIL_USERNAME="denuncia@unamad.edu.pe"
MAIL_PASSWORD="CAMBIAR_POR_PASSWORD_REAL"
MAIL_FROM_NAME="Sistema de Denuncias UNAMAD"
MAIL_FROM_ADDRESS="denuncia@unamad.edu.pe"

# Si usan Gmail u otro proveedor:
# MAIL_HOST="smtp.gmail.com"
# MAIL_PORT=587
# MAIL_USERNAME="tucorreo@gmail.com"
# MAIL_PASSWORD="tu_app_password"

# ============================================================================
# SECURITY
# ============================================================================
# Rate limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL="info"
# En desarrollo: "debug", en producción: "info" o "warn"

# ============================================================================
# URLs PÚBLICAS (para emails, PDFs, etc.)
# ============================================================================
API_URL="https://denuncia-api.unamad.edu.pe/api"
UPLOADS_URL="https://denuncia-api.unamad.edu.pe/uploads"
